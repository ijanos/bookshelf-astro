---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Janos' bookshelf, all books I've read" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link href="/atom.xml" rel="alternate" type="application/atom+xml" title="atom feed">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="px-2 mx-auto min-h-dvh max-w-6xl bg-[url('/bg.jpg')] flex flex-col justify-between gap-2">
		<Nav />
		<slot />
		<Footer />
	</body>
</html>
